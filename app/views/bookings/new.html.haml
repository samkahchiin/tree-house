%h1 Booking Page

%div#booking-form
  = form_for Booking.new do |f|
    .form-group
      = f.label :name
      %br
      = f.text_field :name , :required => true
    .form-group
      = f.label :mobile
      %br
      = f.phone_field :mobile , :required => true
    .form-group
      = f.label :email
      %br
      = f.email_field :email , :required => true
    = f.submit('Book Now!', class: "btn btn-success")
