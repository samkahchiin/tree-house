.container
  %h1 Booking Page

  %div#booking-form
    = form_tag "/bookings", method: "post"  do
      .form-group
        = label_tag :name
        %br
        = text_field_tag :name , nil, required: true
      .form-group
        = label_tag :mobile, "mobile phone no (format is +601XXXXXXXX OR 601XXXXXXXX)"
        %br
        = phone_field_tag :mobile , nil, required: true, pattern: "^(\+?)(601)(\d{8})$"
      .form-group
        = label_tag :email
        %br
        = email_field_tag :email , nil, required: true
      .form-group
        .row
          .col-md-6
            = label_tag :backup_date_1
            %br
            = text_field_tag :backup_date_1, nil, class: "datepicker", required: true
          .col-md-6
            = label_tag :backup_date_2
            %br
            = text_field_tag :backup_date_2, nil, class: "datepicker", required: true
      = submit_tag("Make Payment", class: "btn btn-success")
